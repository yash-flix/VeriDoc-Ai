<%- include('layouts/boilerplate.ejs') %>
<body>
  <h1>All Uploads</h1>

  <% if (uploads.length === 0) { %>
    <p>No uploads yet.</p>
  <% } else { %>
    <table border="1" cellpadding="10">
      <tr>
        <th>File Name</th>
        <th>Type</th>
        <th>Status</th>
        <th>Score</th>
        <th>View</th>
      </tr>
      <% uploads.forEach(upload => { %>
        <tr>
          <td><%= upload.fileName %></td>
          <td><%= upload.fileType %></td>
          <td><%= upload.result.status %></td>
          <td><%= upload.result.authenticityScore || "N/A" %></td>
          <td>
            <% if (upload.fileUrl) { %>
              <a href="<%= upload.fileUrl %>" target="_blank">Open</a>
            <% } else { %>
              No file
            <% } %>
          </td>
        </tr>
      <% }) %>
    </table>
  <% } %>
</body>
</html>
